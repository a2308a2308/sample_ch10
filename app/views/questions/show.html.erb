<div class="center-container">
  <h1>クイズ <%= @current_question_num %>　これな～に？</h1>
  <h1 class="highlighted-question"><%= @current_question.question %></h1>
</div>

<div class="py-5">
  <%= form_with url: answer_question_path(@current_question), method: :post do %>
    <div class="container">
      <div class="row">
        <% @current_question.items.each do |item| %>
        <div class="col-md-5">
          <div class="card mb-5">
            <div class="card-body">
              <%= radio_button_tag :choice, item.id %>
              <label for="choice_#{item.id}">
            <% if item.image.attached? %>
              <%= image_tag url_for(item.image), class: 'card-img-top', alt: item.answer %>
            <% else %>
              <p>No Image Available</p>
            <% end %>
              </label>
              <p class="card-text"><%= item.answer %></p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
    </div>
    <%= submit_tag "回答する" , class: "btn btn-lg btn-primary"%>
  <% end %>
</div>