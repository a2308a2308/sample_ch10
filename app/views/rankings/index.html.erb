<h1>ランキング</h1>
<table>
  <thead>
    <tr>
      <th>順位</th>
      <th>ユーザー名</th>
      <th>得点</th>
    </tr>
  </thead>
  <tbody>
    <% @rankings.each_with_index do |ranking, index| %>
      <tr>
        <td><%= index + 1 %></td>
        <td><%= ranking.user_name %></td>
        <td><%= ranking.total_score %></td>
      </tr>
    <% end %>
  </tbody>
</table>
