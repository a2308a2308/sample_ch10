<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <%= link_to "英語学習アプリ", root_path, id: "logo" %>
    <nav>
      <div class="navbar-header">
        <button id="hamburger" type="button" class="navbar-toggle collapsed">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
      </div>
      <ul id="navbar-menu"
          class="nav navbar-nav navbar-right collapse navbar-collapse">
        <li><%= link_to "Home", root_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
              <a href="#" id="game" class="dropdown-toggle">
                Game <b class="caret"></b>
              </a>
              <ul id="game-dropdown-menu" class="dropdown-menu">
                <% (1..3).each do |level| %>
                  <li><%= link_to "level #{level}", start_level_path(level: level) %></li>
                <% end %>
                <li><%= link_to "all level", start_all_level_path %></li>
              </ul>
          </li>
          <li><%= link_to "Rankings", rankings_path %></li>
          <li class="dropdown">
            <a href="#" id="account" class="dropdown-toggle">
              Account <b class="caret"></b>
            </a>
            <ul id="account-dropdown-menu" class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Log out", logout_path,
                                       data: { "turbo-method": :delete } %>
              </li>
            </ul>
          </li>
        <% else %>
          <li><%= link_to "Log in", login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>
